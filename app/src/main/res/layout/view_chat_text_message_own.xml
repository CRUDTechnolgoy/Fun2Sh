<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:emojicon="http://schemas.android.com/apk/res-auto"
              android:id="@+id/text_message_view"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="right"
              android:orientation="horizontal"
              android:padding="5dp"
              android:visibility="visible">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/text_message_delivery_status_imageview"
                android:layout_width="8dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_status_mes_sent"/>

            <TextView
                android:id="@+id/time_text_message_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="05:05AM"
                android:textSize="12dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:background="@drawable/chat_b2"
            android:orientation="horizontal"
            android:padding="2dp">


            <com.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/message_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:padding="7dp"
                android:text="hi how are you"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                emojicon:emojiconSize="@dimen/chat_emoji_item_preview_size"/>


        </LinearLayout>


    </LinearLayout>

    <com.github.siyamed.shapeimageview.HexagonImageView
        android:id="@+id/avatar_imageview"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:padding="1dp"
        android:src="@drawable/userimgdefault"
        app:siBorderColor="@color/greencolorInner"
        app:siBorderWidth="2dp"/>

</LinearLayout>