<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#5DB530"
            android:gravity="center"
            android:text="Profile Details"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/updateProfileDone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_button_pink"
            android:gravity="center"
            android:text="Update Now"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Registered Email"
            android:textColor="#F8C300"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/updateProfileEmail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Email@domain.com"
            android:textColor="#B5B4B4"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Password"
            android:textColor="#F8C300"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/updateProfilePassword"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#9D9D9D"
            android:hint="xxxxxxxxxxx"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Full Name"
            android:textColor="#F8C300"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/updateProfileFullName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#9D9D9D"
            android:hint="First Middle Last Name"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Country"
            android:textColor="#F8C300"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/updateProfileCountry"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="#9D9D9D" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="State/Province"
            android:textColor="#F8C300"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/updateProfileState"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="#9D9D9D" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="City/Town/Dist."
            android:textColor="#F8C300"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/updateProfileCity"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="#9D9D9D" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Residential Address"
            android:textColor="#F8C300"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/updateProfileAddress"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#9D9D9D"
            android:gravity="top"
            android:hint=""
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Postal Zip Code"
            android:textColor="#F8C300"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/updateProfileZipCode"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#9D9D9D"
            android:hint="457001"
            android:inputType="number"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>