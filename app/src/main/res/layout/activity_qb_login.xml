<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/Relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageviewLogo"
            android:layout_width="193dp"
            android:layout_height="76dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top"
            android:src="@drawable/funchatloginlogo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Relative1"
        android:layout_marginBottom="?actionBarSize"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/email_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_circulerlogin"
            android:drawableLeft="@drawable/username"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:hint="User Name"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="" />


        <EditText
            android:id="@+id/password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_edittext"
            android:background="@drawable/rounded_circulerlogin"
            android:drawableLeft="@drawable/userpass"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:text="" />


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/remember_me_switch"
            android:layout_below="@+id/forgot_password_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/auth_remember_me"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/forgot_password_textview"
            android:layout_below="@+id/password_edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:text="@string/auth_forgot_password"
            android:textSize="@dimen/text_size_small" />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_circulerloginbtn"
            android:text="Get Set Go!"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_below="@+id/remember_me_switch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</LinearLayout>