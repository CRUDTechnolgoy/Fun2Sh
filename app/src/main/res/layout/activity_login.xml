<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context="com.ss.fun2sh.Activity.LoginActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/login_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/signIn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Sign in"
            android:textColor="#F0BD23"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/userName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F79647"
                android:gravity="center"
                android:hint="This is my username"
                android:singleLine="true"
                android:textColor="#fff"
                android:textColorHint="#363535" />

            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F79647"
                android:gravity="center"
                android:hint="This is my password"
                android:singleLine="true"
                android:textColor="#fff"
                android:textColorHint="#363535" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_button"
                android:text="GET SET GO !"
                android:textColor="#008200"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/forgetPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:onClick="forgetPassword"
                android:text="Opps! Forgotten Password\n Help Me."
                android:textColor="#FF0000"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:onClick="createAccount"
            android:padding="5dp"
            android:text="Sign up"
            android:textColor="#F0BD23"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="createAccount"
            android:text="Create New User Account"
            android:textColor="#363535"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="10dp"
            android:paddingTop="15dp"
            android:src="@drawable/login_bottom" />
    </LinearLayout>


</LinearLayout>
